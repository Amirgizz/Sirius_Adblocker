{
    "name": "1337AdBlock",
    "version": "1.0",
    "description": "My supercool adblocker",
    "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
    "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/"],
    "background": {
          "scripts": ["background.js"],
          "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }
  